{
  "name": "whatsclaude",
  "version": "0.1.0",
  "description": "WhatsApp to Claude Code bridge",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run --exclude tests/e2e/**",
    "test:watch": "vitest --exclude tests/e2e/**",
    "test:e2e": "vitest run tests/e2e",
    "test:e2e:watch": "vitest tests/e2e",
    "update:all": "npx npm-check-updates -u && npm install && npm test && npm run test:e2e",
    "reset-state": "npx tsx scripts/reset-state.ts",
    "worktree:add": "npx tsx scripts/worktree-add.ts"
  },
  "keywords": [
    "whatsapp",
    "claude",
    "ai",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "whatsapp-web.js": "1.34.2",
    "@anthropic-ai/claude-agent-sdk": "0.1.76",
    "p-queue": "9.0.1",
    "qrcode-terminal": "0.12.0",
    "dotenv": "17.2.3"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "tsx": "4.21.0",
    "@types/node": "25.0.3",
    "@types/qrcode-terminal": "0.12.2",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
